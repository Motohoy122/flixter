<br />

<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col col-9">
      <h1><%= @course.title %></h1>
    </div>
    <div class="col col-3 text-center align-middle" id="course-cost">
      <span class="badge badge-default">
          <%= number_to_currency @course.cost %>
      </span>
    </div>
  </div>
    <br />
    <div class="row">
      <div class="col col-12">
        <%= image_tag @course.image.url.to_s, class: 'img-fluid' %>
        <br>
        <%= @course.description %>
      </div>
    </div>

  <div class="row">
    <div class="col offset-1 text-right" id="course-button">
      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>

        <br />
        <br />

      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
        <h3 class="badge badge-success">You Are Enrolled!</h3>
      <% else %>
        <% if @course.free? %>
          <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-secondary btn-large', method: :post %>
        <% else %>
          <%= form_tag course_enrollments_path(@course) do %>
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-email="<%= current_user.email %>"
                    data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                    data-amount="<%= (@course.cost * 100).to_i %>"
                    data-locale="auto"></script>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <h3 class="badge badge-info">Sign In to Enroll!</h3>
    <% end %>
    </div>
    
  </div>
  <div class="row">
    <div class="col-12">
      <% @course.sections.rank(:row_order).each do |section| %>
        <br><br>
        <div class="section">
          <h3>
            <%= section.title %>
          </h3>
          <div class="row">
            <% section.lessons.rank(:row_order).each do |lesson| %>
              <div class="col-12 col-sm-6">
                <div class="lesson text-center">
                  <br>
                  <%= link_to lesson_path(lesson) do %>
                    <b><%= lesson.title %></b>
                    <br>
                    <%= lesson.subtitle %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <br class="clr" />
        </div>
      <% end %>
    </div>
  </div>
</div>