<br />

<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col col-9">
      <h1><%= @course.title %></h1>
    </div>
    <div class="col col-3 text-center align-middle" id="course-cost">
      <span class="badge badge-default">
          <%= number_to_currency @course.cost %>
      </span>
    </div>
  </div>
    <br />
    <div class="row">
      <div class="col col-12">
        <%= @course.description %>
      </div>
    </div>

  <div class="row">
    <div class="col offset-1 text-right" id="course-button">
      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Add Course', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>
    
  </div>
  <div class="row">
    <div class="col-12">
      <% @course.sections.each do |section| %>
        <div class="section">
          <%= section.title %>
          <% section.lessons.each do |lesson| %>
            <div class="lesson">
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>